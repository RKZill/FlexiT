<?xml version="1.0"?>

<RelativeLayout android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools" xmlns:map="http://schemas.android.com/apk/res-auto">

    <EditText android:layout_height="45dp" android:layout_width="290dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Name"
        android:inputType="textPersonName"
        android:ems="10" android:id="@+id/TF_location"/>

    <fragment android:layout_height="633dp"
        android:layout_width="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/map" tools:context=".MapsActivity"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="98dp"
        android:layout_marginStart="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Gyms Near Me"
        android:id="@+id/view_gyms"
        android:onClick="onClick"
        android:layout_below="@+id/TF_location"/>

</RelativeLayout>