<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".FeedActivity">

   <RelativeLayout
       android:layout_weight="2"
       android:layout_width="match_parent"
       android:background="@color/colorPrimary"
       android:layout_height="0dp">

      <TextView
          android:id="@+id/textGrid"
          android:text="FlexiT"
          android:textSize="40dp"
          android:textColor="@android:color/white"
          android:layout_centerInParent="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
   </RelativeLayout>

   <GridLayout
       android:columnCount="2"
       android:rowCount="3"
       android:alignmentMode="alignMargins"
       android:columnOrderPreserved="false"
       android:layout_weight="8"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:padding="14dp">

      <!-- Row 1 -->
      <!-- Column 1 -->


      <androidx.cardview.widget.CardView
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:layout_marginBottom="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          app:cardElevation="8dp"
          app:cardCornerRadius="8dp">

         <LinearLayout
             android:layout_gravity="center_horizontal|center_vertical"
             android:layout_margin="16dp"
             android:orientation="vertical"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/home" />
         </LinearLayout>
      </androidx.cardview.widget.CardView>

      <!-- Column 2 -->


      <androidx.cardview.widget.CardView
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:layout_marginBottom="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          app:cardElevation="8dp"
          app:cardCornerRadius="8dp">

         <LinearLayout
             android:layout_gravity="center_horizontal|center_vertical"
             android:layout_margin="16dp"
             android:orientation="vertical"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_schedule"
                android:background="@drawable/schedule"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Person"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


         </LinearLayout>
      </androidx.cardview.widget.CardView>

      <!-- Row 2 -->
      <!-- Column 1 -->


      <androidx.cardview.widget.CardView
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:layout_marginBottom="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          app:cardElevation="8dp"
          app:cardCornerRadius="8dp">

         <LinearLayout
             android:layout_gravity="center_horizontal|center_vertical"
             android:layout_margin="16dp"
             android:orientation="vertical"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_workout"
                android:background="@drawable/workouts"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Person"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


         </LinearLayout>
      </androidx.cardview.widget.CardView>


      <!-- Column 2 -->


      <androidx.cardview.widget.CardView
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:layout_marginBottom="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          app:cardElevation="8dp"
          app:cardCornerRadius="8dp">

         <LinearLayout
             android:layout_gravity="center_horizontal|center_vertical"
             android:layout_margin="16dp"
             android:orientation="vertical"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">


            <Button
                android:id="@+id/button_clock"
                android:background="@drawable/android_timer_icon"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Person"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


         </LinearLayout>
      </androidx.cardview.widget.CardView>

      <!-- Row 3 -->
      <!-- Column 1 -->
      <androidx.cardview.widget.CardView
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:layout_marginBottom="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          app:cardElevation="8dp"
          app:cardCornerRadius="8dp">

         <LinearLayout
             android:layout_gravity="center_horizontal|center_vertical"
             android:layout_margin="16dp"
             android:orientation="vertical"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/maps"/>
            <TextView
                android:text="Person"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
         </LinearLayout>
      </androidx.cardview.widget.CardView>

      <!-- Column 2 -->
      <androidx.cardview.widget.CardView
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:layout_marginBottom="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          app:cardElevation="8dp"
          app:cardCornerRadius="8dp">

         <LinearLayout
             android:layout_gravity="center_horizontal|center_vertical"
             android:layout_margin="16dp"
             android:orientation="vertical"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_BMI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bmi"/>
            <TextView
                android:text="Person"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
         </LinearLayout>
      </androidx.cardview.widget.CardView>
   </GridLayout>
</LinearLayout>