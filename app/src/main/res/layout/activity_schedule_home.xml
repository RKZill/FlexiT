<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScheduleHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#26A69A"
    tools:context=".ScheduleHome">

    <TextView
        android:id="@+id/Title"
        android:layout_width="409dp"
        android:layout_height="126dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text=" My Schedule Home"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/WeeklyS"
        android:layout_width="167dp"
        android:layout_height="153dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="84dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title"
        app:srcCompat="@mipmap/weekly" />

    <ImageButton
        android:id="@+id/MonthlyS"
        android:layout_width="159dp"
        android:layout_height="154dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title"
        app:srcCompat="@mipmap/monthly"/>
    <TextView
        android:id="@+id/textView"
        android:layout_width="151dp"
        android:layout_height="159dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="20dp"
        android:text="Plan your weekly schedule the way you want. Put your work out plan, eating habbits, etc. "
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WeeklyS" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="182dp"
        android:layout_height="172dp"
        android:layout_marginTop="12dp"
        android:text="View your monthly schedule, plan for events, keep track of days gone to gym, etc "
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MonthlyS" />

</androidx.constraintlayout.widget.ConstraintLayout>